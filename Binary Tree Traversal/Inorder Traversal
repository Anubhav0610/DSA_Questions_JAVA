/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<Integer> inorderTraversal(TreeNode root) {
        List<Integer> hp=new ArrayList<>();
        if(root==null)
        return hp;
        traverse(hp,root);
        return hp;
    }
    void traverse(List<Integer> hp,TreeNode root)
    {
        if(root==null)
        return;
        traverse(hp,root.left);
        hp.add(root.val);
        traverse(hp,root.right);
    }
}
