class Solution {
    int arraySum(int arr[]) {
        return sumRecursive(arr, 0);
    }
    private static int sumRecursive(int[] arr, int index) {
        // Base Case: If the index is out of bounds, we've summed all elements.
        if (index == arr.length) {
            return 0;
        }
        // Add the current element (arr[index]) to the sum of the rest of the array.
        return arr[index] + sumRecursive(arr, index + 1);
    }
}
