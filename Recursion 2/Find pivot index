class Solution {
    public int pivotIndex(int[] nums) {
        int totalSum = 0;
        for (int num : nums) totalSum += num;
        return findPivot(nums, 0, 0, totalSum);
    }

    private int findPivot(int[] nums, int index, int leftSum, int rightSum) {
        if (index == nums.length) return -1;

        // Subtract current element from right sum
        rightSum -= nums[index];

        // Check pivot condition
        if (leftSum == rightSum) return index;

        // Recursive call for next index
        return findPivot(nums, index + 1, leftSum + nums[index], rightSum);
    }
}
