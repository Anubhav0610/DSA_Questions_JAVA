import java.util.* ;
import java.io.*;
import java.util.ArrayList;

public class Reversing_the_Array
{
    public static void reverseArray(ArrayList<Integer> arr, int m)
    {
 
 		int n = arr.size();
 		ArrayList<Integer> brr = new ArrayList<Integer>();
 		for (int i = 0; i < arr.size(); i++) {
 			brr.add(0);
 		}
 		int p = 0;
 		// First fill in the same order as the original array upto Mth postion.
 		for (int i = 0; i <= m; i++) {
 			brr.set(p++, arr.get(i));
 		}
 		// Now fill in the reverse order till (m+1)th postion.
 		for (int j = n - 1; j > m; j--) {
 			brr.set(p++, arr.get(j));
 		}
 		// Now copy back the array into array ARR.
 		for (int i = 0; i < n; i++) {
 			arr.set(i, brr.get(i));
 		}
    }
}
